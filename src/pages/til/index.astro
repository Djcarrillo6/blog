---
import { SITE } from "@config";
import getSortedTils from "@utils/getSortedTils";
import getPageNumbers from "@utils/getPageNumbers";

import { getCollection } from "astro:content";
import TilPosts from "@layouts/TilPosts.astro";

const posts = await getCollection("til");

const sortedPosts = getSortedTils(posts);

const totalPages = getPageNumbers(sortedPosts.length);

const paginatedPosts = sortedPosts.slice(0, SITE.postPerPage);
---

<TilPosts tilPosts={paginatedPosts} pageNum={1} totalPages={totalPages.length} />
